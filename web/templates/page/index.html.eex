<div class="top notice"><%= top_notice() %> </div>
<div class="history"></div>
<div class="message">
  <%= if @is_signin do %>
    <input class="content" placeholder="回车发送聊天内容，点击聊天室图标有惊喜！"  />
  <% else %>
    <div class="visitor">
      使用聊天功能需经过身份验证且账户有交易记录。    
    </div>
  <% end %>
</div>
<script>
window.userToken = "<%= @channel_token %>";
username = "<%= @conn.assigns[:username] %>";
isAdmin= "<%= @conn.assigns[:is_admin] %>";
</script>
